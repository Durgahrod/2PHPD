{% extends 'Layout/base.html.twig' %}

{% block body %}
    <form method="post">
        <label>
            <input type="text" name="findBy" value="{{ value|default }}" >
        </label>
        <input type="submit">
    </form>

    <table>
        <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {id: user.id}) }}">Modifier</a>
                    <a href="{{ path('app_user_delete', {id: user.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_user_create') }}">Create</a>
{% endblock %}
